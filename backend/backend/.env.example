# OneWay Backend Environment Variables
# Copy this to .env and fill in your values

# ============================================
# AWS Configuration
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ============================================
# AWS Bedrock Configuration
# ============================================
# Model ID (default: Amazon Nova Pro 1.0)
BEDROCK_MODEL_ID=amazon.nova-pro-v1:0

# Optional: Pre-configured Bedrock Agent IDs
BEDROCK_AGENT_ID=
BEDROCK_AGENT_ALIAS_ID=

# Agent settings
BEDROCK_MAX_ITERATIONS=15
BEDROCK_TIMEOUT_SECONDS=300

# ============================================
# API Settings
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Session Management
# ============================================
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SESSIONS=100

# ============================================
# SES SMTP Configuration (for Sentinel emails)
# ============================================
# Get SMTP credentials from AWS SES Console > SMTP settings > Create SMTP credentials
SES_SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SES_SMTP_PORT=587
SES_SMTP_USERNAME=
SES_SMTP_PASSWORD=

# Sentinel Email Addresses
SENTINEL_SENDER_EMAIL=your-verified-email@example.com
SENTINEL_RECIPIENT_EMAIL=mvd-reports@kerala.gov.in
